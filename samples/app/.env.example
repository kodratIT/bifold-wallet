# Bifold Wallet Sample App Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Trust Registry Configuration
# ===========================================

# Enable/disable trust registry integration
TRUST_REGISTRY_ENABLED=false

# Trust Registry API URL
TRUST_REGISTRY_URL=

# Ecosystem DID - the governance authority DID
TRUST_REGISTRY_ECOSYSTEM_DID=

# Cache TTL in milliseconds (default: 1 hour = 3600000)
TRUST_REGISTRY_CACHE_TTL=3600000

# Show warning banner for untrusted issuers/verifiers
TRUST_REGISTRY_SHOW_WARNING=true

# Block credentials from untrusted issuers (strict mode)
TRUST_REGISTRY_BLOCK_UNTRUSTED_ISSUERS=false

# Block proof requests from untrusted verifiers (strict mode)
TRUST_REGISTRY_BLOCK_UNTRUSTED_VERIFIERS=false
